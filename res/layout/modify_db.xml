<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/msg_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="176dp"
        android:layout_marginRight="23dp" />

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/msg_spinner"
        android:layout_alignTop="@+id/msg_spinner"
        android:layout_marginTop="78dp"
        android:text="@string/btn_remove_label" 
        android:onClick="remove_message" />

    <EditText
        android:id="@+id/new_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/msg_spinner"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/new_message"
        android:layout_below="@+id/new_message"
        android:layout_marginTop="17dp"
        android:onClick="add_message"
        android:text="@string/btn_add" />

</RelativeLayout>